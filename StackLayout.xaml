<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerP2.StackLayout"
             Title="StackLayout">
    <StackLayout Margin="20"
                 Orientation="Vertical"
                 HorizontalOptions="Center"
                 Spacing="30">
        <BoxView Color="Green"
                 WidthRequest="40"/>
        <Label Text="Quito - Ecuador" FontSize="Large" TextColor="Yellow"/>
        <BoxView Color="Orange"
                 WidthRequest="40" />
        <Label Text="Lima - Perú" FontSize="Medium" TextColor="Red"/>
        <BoxView Color="Purple"
                 WidthRequest="40" />
        <Label Text="Bogotá - Colombia" FontSize="Small" TextColor="Blue"/>

        <Button
            x:Name="CounterBtn"
            Text="Flex Layout" 
            Clicked="OnCounterClicked"
            HorizontalOptions="Fill" />

    </StackLayout>

</ContentPage>